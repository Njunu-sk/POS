<%= simple_form_for(@sale) do |f| %>
 <% if @sale.errors.any? %>
  <div id="error_explanation">
   <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>
   <ul>
   <% @sale.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
   </ul>
  </div>
 <% end %>
 <div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
 </div>
<h3>Items</h3>

  <table class='table'>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
      </tr>
    </thead>
    <tbody class='items'>
      <%= f.simple_fields_for :items do |builder| %>
        <%= render 'item_fields', f: builder %>
      <% end %>
    </tbody>

  </table>

 <div class="actions">
  <%= f.submit %>
  <%= link_to_add_association 'Add Item', f, :items, class: 'btn btn-primary', data: { association_insertion_node: '.items', association_insertion_method: :append } %>
 </div>

<% end %>